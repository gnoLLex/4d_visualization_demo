         <Label text="Rotation">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <CheckBox fx:id="cBshowCS" mnemonicParsing="false" selected="true" text="show coordinatesystem" />
         <HBox alignment="CENTER" prefHeight="10.0" spacing="30.0">
