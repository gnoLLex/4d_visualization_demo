      <Canvas fx:id="canvas" height="720.0" onMouseDragged="#updateVector" onMousePressed="#setVector" onScroll="#zoom" width="770.0" />
      <Label fx:id="lblTipp" layoutX="13.0" layoutY="5.0" />
